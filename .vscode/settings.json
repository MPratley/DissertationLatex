{
    "editor.wordWrap": "bounded",
    "latex-workshop.view.pdf.backgroundColor": "#fff4d1",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#45132b",
        "activityBar.activeBorder": "#3e641c",
        "activityBar.background": "#45132b",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#3e641c",
        "activityBarBadge.foreground": "#e7e7e7",
        "statusBar.background": "#1d0812",
        "statusBar.border": "#1d0812",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#45132b",
        "titleBar.activeBackground": "#1d0812",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.border": "#1d0812",
        "titleBar.inactiveBackground": "#1d081299",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#1d0812",
    "files.exclude": {
        "**/*.aux": true,
        "**/*.bcf": true,
        "**/*.fdb_latexmk": true,
        "**/*.fls": true,
        "**/*.gz": true,
        "**/*.log": true,
        "**/*.out": true,
        "**/*.tex~": true,
        "**/*.toc": true,
        "**/*.xml": true,
        "**/*.bbl": true,
        "**/*.blg": true,
        "**/*.lof": true
    },
    "latex-workshop.intellisense.file.exclude": [
        "**/*.aux",
        "**/*.bbl",
        "**/*.bcf",
        "**/*.blg",
        "**/*.idx",
        "**/*.ind",
        "**/*.lof",
        "**/*.lot",
        "**/*.out",
        "**/*.toc",
        "**/*.acn",
        "**/*.acr",
        "**/*.alg",
        "**/*.glg",
        "**/*.glo",
        "**/*.gls",
        "**/*.ist",
        "**/*.fls",
        "**/*.log",
        "**/*.nav",
        "**/*.snm",
        "**/*.fdb_latexmk",
        "**/*.synctex.gz",
        "**/*.run.xml",
        "*.bbl"
    ],
    "latex-workshop.latex.tools": [

        {
            "name": "texcountChpaters",
            "command": "texcount",
            "args": [
                "-1",
                "-sum", 
                "-merge", 
                "Chapter*.tex",
                "-out=words.sum"
            ], 
            "env": {}
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "lualatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-lualatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk_rconly",
            "command": "latexmk",
            "args": [
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "rnw2pdf",
            "command": "Rscript",
            "args": [
                "-e",
                "knitr::knit2pdf('%DOCFILE%')"
            ],
            "env": {}
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "texcountChpaters",
                "latexmk"
            ]
        },
        {
            "name": "latexmk (latexmkrc)",
            "tools": [
                "latexmk_rconly"
            ]
        },
        {
            "name": "latexmk (lualatex)",
            "tools": [
                "lualatexmk"
            ]
        },
        {
            "name": "pdflatex âžž bibtex âžž pdflatexâ€ŠÃ—â€Š2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "Compile Rnw files",
            "tools": [
                "rnw2pdf"
            ]
        }
    ],
    "spellright.language": [
        "en_GB",
        "English (British)"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "spellright.groupDictionaries": false
}
